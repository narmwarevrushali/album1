<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_initial"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:text="H"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/text_shape"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:id="@+id/linear_info"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_initial"
            android:layout_toLeftOf="@+id/btn_remove">
            <TextView
                android:id="@+id/txt_frnd_name"
                style="@style/small_title_textStyle"
                android:text="Hello"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_frnd_info"
                android:textSize="12sp"
                style="@style/textStyle"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/btn_remove"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <LinearLayout
            android:layout_toRightOf="@id/txt_initial"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/linear_info"
            android:background="@color/grey_200"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </RelativeLayout>
</LinearLayout>