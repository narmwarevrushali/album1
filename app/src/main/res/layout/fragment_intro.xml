<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/intro_linear_margin_top"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/intro_title"
                android:textStyle="bold"
                android:layout_margin="@dimen/intro_txt_margin"
                style="@style/small_title_textStyle"
                android:textColor="@color/red_A400"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/intro_img"
                android:layout_marginTop="@dimen/intro_img_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/intro_img_height" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
