<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">


<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        app:srcCompat="@drawable/ic_cart_red"
        android:layout_width="@dimen/cart_empty_img_size"
        android:layout_height="@dimen/cart_empty_img_size" />

    <TextView
        android:text="Woops !"
        android:layout_margin="@dimen/cart_empty_msg_margin"
        style="@style/small_title_textStyle"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Your cart is empty"
        style="@style/small_title_textStyle"
        android:textColor="@color/grey_500"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_back"
            android:background="@drawable/button_dialog"
            android:padding="@dimen/cart_empty_btn_padding"
            android:layout_marginTop="@dimen/cart_empty_btn_margin_top"
            android:textColor="@color/colorPrimary"
            android:text="Back to main menu"
            style="@style/buttonStyle"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/cart_empty_btn_width"
            android:layout_height="wrap_content" />

</LinearLayout>

</FrameLayout>
