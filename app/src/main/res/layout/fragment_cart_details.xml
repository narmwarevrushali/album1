<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/cart_total"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sub total"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_total"
            android:text="00"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Shipping"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:gravity="center"
            android:drawableRight="@drawable/ic_shipping"
            android:drawablePadding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_shipping"
            android:text="00"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Coupon Discount"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:gravity="center"
            android:drawableRight="@drawable/ic_redeem_black_24dp"
            android:drawablePadding="20dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_disc"
            android:text="00"
            style="@style/textStyle"
            android:textColor="@color/grey_700"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <LinearLayout
        android:background="@color/grey_400"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Grand Total"
            android:layout_centerVertical="true"
            style="@style/small_title_textStyle"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/price_linear"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:text="@string/amt"
            style="@style/small_title_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/total_album_price"
            android:text="00"
            style="@style/small_title_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

