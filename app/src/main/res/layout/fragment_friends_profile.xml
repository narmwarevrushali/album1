<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_100"
    tools:context="narmware.com.photouploadcopy.fragment.AddressFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:background="@drawable/edt_without_background"
        android:id="@+id/edt_name"
        android:layout_marginTop="@dimen/frnd_prof_name_margin_top"
        android:layout_marginBottom="@dimen/frnd_prof_name_margin_bottom"
        android:layout_marginLeft="@dimen/frnd_prof_name_margin_left"
        android:padding="@dimen/frnd_prof_name_padding"
        style="@style/big_title_textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Click here to enter name"
        />

    <ScrollView
        android:layout_below="@id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/details_card"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/prof_card_corner"
            android:elevation="@dimen/prof_card_elevation"
            android:layout_marginBottom="@dimen/prof_card_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/prof_txt_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_area"
                    android:padding="@dimen/prof_txt_padding"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Area"
                    style="@style/textStyle"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/prof_txt_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_bld_no"
                    android:padding="@dimen/prof_txt_padding"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Building Number/Name"
                    style="@style/textStyle"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/prof_txt_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_flat_no"
                    android:padding="@dimen/prof_txt_padding"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Flat number"
                    style="@style/textStyle"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/prof_txt_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_land"
                    android:padding="@dimen/prof_txt_padding"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Landmark"
                    style="@style/textStyle"
                    />
            </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/prof_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_addr"
            android:padding="@dimen/prof_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textStyle"
            android:hint="Address"
           />
    </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_margin="@dimen/prof_txt_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:layout_marginTop="10dp"
                android:id="@+id/auto_pin"
                style="@style/textStyle"
                android:padding="@dimen/prof_txt_padding"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin code"
                />
            </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/prof_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_state"
            android:maxLines="1"
            android:inputType="text"
            android:singleLine="true"
            android:padding="@dimen/prof_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="State"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/prof_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_dist"
            android:padding="@dimen/prof_txt_padding"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/prof_txt_margin"
        >
        <EditText
            android:id="@+id/edt_city"
            android:maxLines="1"
            android:inputType="text"
            android:singleLine="true"
            android:padding="@dimen/prof_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>

<!--
    <android.support.design.widget.TextInputLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_pin"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pin code"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>
-->

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/prof_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_mail"
            android:padding="@dimen/prof_txt_padding"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/prof_txt_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edt_mobile"
            android:maxLength="10"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLines="1"
            android:singleLine="true"
            android:padding="@dimen/prof_txt_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            style="@style/textStyle"
            />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
</android.support.v7.widget.CardView>
        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_submit"
                android:text="Submit"
                style="@style/buttonStyle"
                android:layout_margin="@dimen/prof_btn_margin"
                android:background="@drawable/button_shape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_cancel"
                android:text="Cancel"
                style="@style/buttonStyle"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/prof_btn_margin"
                android:background="@drawable/button_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
</FrameLayout>
