<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.v7.widget.CardView
    android:id="@+id/card_coupon"
    android:layout_margin="@dimen/coupon_card_margin"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/invoice_linear"
        android:padding="@dimen/coupon_item_padding"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/coupon_item_margin_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_cpn_amt"
                android:padding="@dimen/coupon_txt_padding"
                android:layout_below="@+id/txt_cpn_name"
                android:text="Get Rs. 100 OFF"
                android:layout_marginTop="@dimen/coupon_title_margin_top"
                style="@style/textStyle"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_cpn_name"
                android:padding="@dimen/coupon_txt_padding"
                android:text="Wedding"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/amber_800"
                style="@style/textStyle"
                android:gravity="center"
                android:background="@drawable/button_coupon_dotted"
                android:textAllCaps="true"
                android:layout_marginLeft="@dimen/coupon_title_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:padding="@dimen/coupon_txt_padding"
                android:text="Terms and Conditions"
                style="@style/textStyle"
                android:textColor="@color/grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:paddingTop="@dimen/coupon_txt_paddingTop"
                android:paddingBottom="@dimen/coupon_txt_paddingBottom"
                android:paddingLeft="@dimen/coupon_txt_paddingLeft"
                android:paddingRight="@dimen/coupon_txt_paddingLeft"
                android:text="Minimum Transaction"
                style="@style/textStyle"
                android:textColor="@color/grey_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_min_amt"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/coupon_txt_paddingTop"
                    android:paddingBottom="@dimen/coupon_txt_paddingBottom"
                    android:text="Rs. 500"
                    style="@style/textStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_apply"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/coupon_btn_margin_top"
                android:paddingRight="@dimen/coupon_btn_padding_right"
                android:paddingLeft="@dimen/coupon_btn_paddingLeft"
                android:paddingTop="@dimen/coupon_btn_paddingTop"
                android:paddingBottom="@dimen/coupon_btn_paddingBottom"
                android:background="@drawable/button_shape_order"
                android:textAllCaps="false"
                style="@style/buttonStyle"
                android:minHeight="1dp"
                android:text="Apply Coupon"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

